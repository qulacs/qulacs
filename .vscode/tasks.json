{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build gcc",
            "type": "shell",
            "command": "USE_TEST=Yes ./script/build_gcc.sh"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "make test -C build -j $(nproc)",
            "dependsOn": [
                "build gcc"
            ]
        },
        {
            "label": "test and generate coverage",
            "type": "shell",
            "command": "make coverage -C build -j $(nproc)",
            "dependsOn": [
                "build gcc"
            ]
        },
        {
            "label": "pythontest",
            "type": "shell",
            "command": "make pythontest -C build -j $(nproc)",
            "dependsOn": [
                "build gcc"
            ]
        },
        {
            "label": "install",
            "type": "shell",
            "command": "python setup.py bdist_wheel",
            "dependsOn": [
                "build gcc"
            ]
        },
        {
            "label": "format",
            "type": "shell",
            "command": "find ./src ./test ./benchmark -regex '.*\\.\\(cu\\|cuh\\|cpp\\|h\\|hpp\\)' -exec clang-format -style=file -i {} \\;"
        },
        {
            "label": "update stub",
            "type": "shell",
            "command": "script/update_stubs.sh",
            "dependsOn": [
                "install"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
